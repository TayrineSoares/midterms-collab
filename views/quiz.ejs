<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quiz: <%= title %></title>
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/navbar_footer.css" />
  <link rel="stylesheet" href="/styles/quiz.css" />
</head>
<body>
  <%- include('partials/_header.ejs') %>

  <div class="quiz-main">
    <h1>Quiz Title: <%= title %></h1>
    <p>Privacy: <%= privacySetting ? 'Private' : 'Public' %></p>

    <!-- Display Questions and Answers -->
    <% questions_and_answers.forEach((qa, index) => { %>
      <div class="question">
        <h2>Question <%= index + 1 %>: <%= qa.question %></h2>
        <ul>
          <% qa.answers.forEach((answer) => { %>
            <li>
              <%= answer.answer_text %>
              <% if (answer.is_correct) { %>
                <span class="correct-answer">(Correct)</span>
              <% } %>
            </li>
          <% }) %>
        </ul>
      </div>
    <% }) %>
  </div>

  <%- include('partials/_footer.ejs') %>
</body>
</html>
