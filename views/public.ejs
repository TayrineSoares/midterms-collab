<!DOCTYPE html>
<html lang="en">

<head>
  <title>All Public Quizzes</title>
  <!-- Given code -->
  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >
   <!-- Given code -->
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />


  <!-- Link CSS Files -->
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/navbar_footer.css" />
  <link rel="stylesheet" href="/styles/index.css" />
  <link rel="stylesheet" href="/styles/public.css" />

  <!-- JQUERY -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<!-- Google Fonts ('Nunito', sans-serif;)-->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&display=swap" rel="stylesheet">



<body>
  <!-- Top nav bar (fixed) -->
  <%- include('partials/_header.ejs') %>



  <!-- Main content -->
  <div class ="main">
    <h1><strong>All Public Quizzes</strong></h1>
    <div class="all-public-quizzes">

      <!-- Create a card for each quiz in the db-->
      <% quizzes.forEach(quiz => { %>
        <div class="quiz-card">

          <h2><%= quiz.title %></h2>
          <a href="quiz/<%= quiz.url %>" class="quiz-btn">Take Quiz</a>

        </div>

      <% }) %>


    </div>
    <!-- Button to go back to the homepage -->
    <button id="homepage-btn" type="button">Back to Homepage</button>
  </div>

  <!-- Footer (fixed) -->
  <%- include('partials/_footer.ejs') %>


</body>
</html>
