    <!-- QUIZ TITLE: embeded "title" comes from the create route -->
    <h1>Quiz Title: <%= title %> </h1>

    <!-- Display Privacy Setting -->
    <!--TERNARY OPERATOR: If privacy is true (private), it will display "Private"-->
    <p>Privacy: <%= privacySetting ? 'Private' : 'Public' %></p>
    </section>


    <!-- FORM TO ADD 05 QUESTIONS -->
    <!--When the SUBMIT button is clicked, the form submits ALL QUESTIONS AND ANSWERS to the server using POST.-->
    <!--The server saves the questions to the database and redirects the user THE QUIZ PAGE /quiz/create/:quizId -->
    <!--THE ACTION FOR THE POST METHOD IS ON create/:quizId -->
    <!-- THE REDIRECT (TO BE HANDLED IN THE ROUTE) IS TO quiz/:quizId-->

    <form class="questions-form" action="/quiz/create/<%= quizId %>" method="POST">

      <!-----------QUESTION 1----------------->
      <!--The questions[0] format allows us to group all questions in an array QUESTIONS -->
      <h2>Question 1</h2>
      <textarea name="questions[0]" id="question1" required placeholder="Enter Question 1"></textarea>

      <div class="label-for-answers">
      <p>Correct answer</p>
      </div>

      <!-- radio buttons having the SAME NAME is what makes the user able select only 1 option -->
      <!-- When the user selects one of the radio buttons, the backend receives the VALUE in the form.-->
      <!--The selected radio buttonâ€™s VALUE will be sent as part of the form submission. (One of the key-values of the object in answers[0])-->

      <!--answers[0] format allows us to group all answers in an array of objects ANSWERS-->
      <!--ANSWER 1-->
      <div class="answer-group">
        <input type="text" name="answers[0].answer1" id="answer1-1" required placeholder="Enter answer 1" />
        <input type="radio" name="answers[0].correct" value="answer1" class="answer-radio" />
      </div>

      <!--ANSWER 2-->
      <div class="answer-group">
        <input type="text" name="answers[0].answer2" id="answer1-2" required placeholder="Enter answer 2" />
        <input type="radio" name="answers[0].correct" value="answer2" class="answer-radio" />
      </div>

      <!--ANSWER 3-->
      <div class="answer-group">
        <input type="text" name="answers[0].answer3" id="answer1-3" required placeholder="Enter answer 3" />
        <input type="radio" name="answers[0].correct" value="answer3" class="answer-radio" />
      </div>

      <!--ANSWER 4-->
      <div class="answer-group">
        <input type="text" name="answers[0].answer4" id="answer1-4" required placeholder="Enter answer 4" />
        <input type="radio" name="answers[0].correct" value="answer4" class="answer-radio" />
      </div>

